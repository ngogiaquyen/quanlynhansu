<Window x:Class="HRMANAGMENT2.Dialogs.DisciplineDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Kỷ luật" Height="500" Width="600" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã KL:"/>
            <TextBox x:Name="TxtDisciplineId" IsReadOnly="True"/>
            <Label Content="Mã NV:"/>
            <ComboBox x:Name="CbEmployeeId" DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>
            <Label Content="Hồ sơ vi phạm:"/>
            <TextBox x:Name="TxtViolationPath"/>
            <Label Content="Quyết định KL:"/>
            <TextBox x:Name="TxtDisciplinaryDecisionPath"/>
            <Label Content="Thư từ chức:"/>
            <TextBox x:Name="TxtResignationLetterPath"/>
            <Label Content="Quyết định chấm dứt:"/>
            <TextBox x:Name="TxtTerminationDecisionPath"/>
            <Label Content="Hồ sơ bàn giao:"/>
            <TextBox x:Name="TxtHandoverPath"/>
            <Label Content="Hồ sơ thanh lý:"/>
            <TextBox x:Name="TxtLiquidationPath"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>