<Window x:Class="HRMANAGMENT2.Dialogs.TrainingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết Đào tạo" Height="450" Width="600" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <ScrollViewer>
        <StackPanel Margin="20">
            <Label Content="Mã ĐT:"/>
            <TextBox x:Name="TxtTrainingId" IsReadOnly="True"/>
            <Label Content="Mã NV:"/>
            <ComboBox x:Name="CbEmployeeId" DisplayMemberPath="Name" SelectedValuePath="EmployeeId"/>
            <Label Content="Kế hoạch ĐT:"/>
            <TextBox x:Name="TxtTrainingPlanPath"/>
            <Label Content="Chứng chỉ:"/>
            <TextBox x:Name="TxtCertificatePath"/>
            <Label Content="Đánh giá:"/>
            <TextBox x:Name="TxtEvaluationPath"/>
            <Label Content="Lộ trình nghề:"/>
            <TextBox x:Name="TxtCareerPath"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="BtnSave" Content="Lưu" Click="BtnSave_Click" Margin="5" Padding="10,5" Background="#28A745" Foreground="White" IsEnabled="False"/>
                <Button Content="Hủy" Click="BtnCancel_Click" Margin="5" Padding="10,5" Background="#6C757D" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>