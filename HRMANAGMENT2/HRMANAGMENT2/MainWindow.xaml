<Window x:Class="HRMANAGMENT2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Nhân sự" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E9ECEF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#007BFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Hamburger Button -->
                <Button x:Name="HamburgerBtn" Content="☰" Grid.Column="0" Click="HamburgerBtn_Click" Width="50" Height="50" 
                        Background="Transparent" BorderThickness="0" FontSize="20" Margin="10" HorizontalAlignment="Left"/>

                <!-- Nội dung Sidebar -->
                <StackPanel Grid.Column="1">
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,20,20,10">
                        <TextBlock Text="HR App" FontSize="24" FontWeight="Bold" Foreground="#007BFF"/>
                    </StackPanel>

                    <!-- Navigation Buttons -->
                    <StackPanel Margin="0,0,0,20">
                        <Button x:Name="BtnEmployees" Content="👥 Nhân viên" Click="BtnEmployees_Click" Tag="👥 Nhân viên"
                                Margin="10" Height="50" Background="Transparent" BorderThickness="0" 
                                HorizontalContentAlignment="Left" Padding="20,0">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="BtnContracts" Content="📄 Hợp đồng" Click="BtnContracts_Click" Tag="📄 Hợp đồng"
                                Margin="10" Height="50" Background="Transparent" BorderThickness="0" 
                                HorizontalContentAlignment="Left" Padding="20,0">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="BtnAttendance" Content="⏰ Chấm công" Click="BtnAttendance_Click" Tag="⏰ Chấm công"
                                Margin="10" Height="50" Background="Transparent" BorderThickness="0" 
                                HorizontalContentAlignment="Left" Padding="20,0">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="BtnRecruitment" Content="💼 Tuyển dụng" Click="BtnRecruitment_Click" Tag="💼 Tuyển dụng"
                                Margin="10" Height="50" Background="Transparent" BorderThickness="0" 
                                HorizontalContentAlignment="Left" Padding="20,0">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="BtnSalary" Content="💵 Lương" Click="BtnSalary_Click" Tag="💵 Lương"
                                Margin="10" Height="50" Background="Transparent" BorderThickness="0" 
                                HorizontalContentAlignment="Left" Padding="20,0">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="BtnTraining" Content="🎓 Đào tạo" Click="BtnTraining_Click" Tag="🎓 Đào tạo"
                                Margin="10" Height="50" Background="Transparent" BorderThickness="0" 
                                HorizontalContentAlignment="Left" Padding="20,0">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="BtnDiscipline" Content="⚖️ Kỷ luật" Click="BtnDiscipline_Click" Tag="⚖️ Kỷ luật"
                                Margin="10" Height="50" Background="Transparent" BorderThickness="0" 
                                HorizontalContentAlignment="Left" Padding="20,0">
                            <Button.Template>
                                <ControlTemplate>
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <!-- Dark Mode Toggle -->
                    <Button Content="🌙 Dark Mode" Click="ToggleDarkMode_Click" 
                            Margin="10" Height="40" Background="#007BFF" Foreground="White"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate>
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Background="White"/>

        <!-- Styles for Buttons -->
    </Grid>
</Window>